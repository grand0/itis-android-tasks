<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_coroutines_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/coroutines_count_text"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="24dp"
                android:layout_height="24dp">

                <TextView
                    android:id="@+id/tv_coroutines_count_next"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:translationY="0dp"
                    app:layout_constraintBottom_toTopOf="@id/tv_coroutines_count"
                    tools:text="3" />

                <TextView
                    android:id="@+id/tv_coroutines_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:translationY="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="2" />

                <TextView
                    android:id="@+id/tv_coroutines_count_prev"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:translationY="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_coroutines_count"
                    tools:text="1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <SeekBar
            android:id="@+id/sb_coroutines_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:min="1"
            android:progress="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/ll_coroutines_count">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/async_text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_async"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stop_on_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/ll_async">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/stop_on_background_text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_stop_on_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_execute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/execute_btn_text"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
